@model SE406_Saguay.FunctionalClassViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (TempData["ResultMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">
        @TempData["ResultMessage"]
    </p>
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Index", "FunctionalClass", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewFunctionalClass.FunctionalClassType)
                    @Html.TextBoxFor(Model => Model.NewFunctionalClass.FunctionalClassType,
                 new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewFunctionalClass.FunctionalClassType"
                          class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-lg" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h2> List of Functional Classes:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>FunctionalClassId</th>
                        <th>FunctionalClassType</th>

                    </tr>
                    @foreach (var functionalClass in Model.FunctionalClassList)
                    {
                        <tr>
                            <td>@functionalClass.FunctionalClassId</td>
                            <td>@functionalClass.FunctionalClassType</td>
                            <td><a asp-action="Edit" asp-route-id="@functionalClass.FunctionalClassId">Edit</a></td>
                            <td><a asp-action="Delete" asp-route-id="@functionalClass.FunctionalClassId" onclick='return confirm("Are your sure?");'>Delete</a></td>

                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>
</div>

