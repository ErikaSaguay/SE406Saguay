@model SE406_Saguay.MaintenanceActionViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (TempData["ResultMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">
        @TempData["ResultMessage"]
    </p>
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Index", "MaintenanceAction", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewMaintenanceAction.MaintenanceActionName)
                    @Html.TextBoxFor(Model => Model.NewMaintenanceAction.MaintenanceActionName,
                 new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewMaintenanceAction.MaintenanceActionName"
                          class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-lg" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h2> List of Maintenance Action:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>MaintenanceActionId</th>
                        <th>MaintenanceActionName</th>

                    </tr>
                    @foreach (var mainAction in Model.MaintenanceActionList)
                    {
                        <tr>
                            <td>@mainAction.MaintenanceActionId</td>
                            <td>@mainAction.MaintenanceActionName</td>
                            <td><a asp-action="Edit" asp-route-id="@mainAction.MaintenanceActionId">Edit</a></td>
                            <td><a asp-action="Delete" asp-route-id="@mainAction.MaintenanceActionId" onclick='return confirm("Are your sure?");'>Delete</a></td>

                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>
</div>


