@model SE406_Saguay.MaterialDesignViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Index", "MaterialDesign", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewMaterialDesign.MaterialDesignType)
                    @Html.TextBoxFor(Model => Model.NewMaterialDesign.MaterialDesignType,
                 new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewMaterialDesign.MaterialDesignType"
                          class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-lg" />
                        <div class="btn btn-lg">
                            @Html.ActionLink("Back to Material Design", "Index")
                        </div>

                    </div>
            }
        </div>
    </div>
</div>
